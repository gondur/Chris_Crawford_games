PitchChange := 12;							RateChange := 20;						END;					10: 						BEGIN							TestName := 'Kathy';							PitchChange := 12;							RateChange := 16;						END;					11: 						BEGIN							TestName := 'Fred';							PitchChange := 20;							RateChange := 16;						END;					12: 						BEGIN							TestName := 'Agnes';							PitchChange := 20;							RateChange := 16;						END;					13: 						BEGIN							TestName := 'Kathy';							PitchChange := 14;							RateChange := 20;						END;					14: 						BEGIN							TestName := 'Agnes';							PitchChange := 14;						END;					15: 						BEGIN							TestName := 'Princess';							PitchChange := 20;							RateChange := 20;						END;					16: 						BEGIN							TestName := 'Princess';							PitchChange := 20;							RateChange := 16;						END;					17: 						BEGIN							TestName := 'Bahh';							PitchChange := 16;							RateChange := 20;						END;				END;				i := 1;				REPEAT					SpeechError := GetIndVoice(i, @MyVoiceSpec);					LongTemp := SizeOf(VoiceDescription);					SpeechError := GetVoiceDescription(@MyVoiceSpec, @MyVoiceDescription, LongTemp);					i := i + 1;				UNTIL (i > VoiceCount) | (MyVoiceDescription.Name = TestName);				IF i <= VoiceCount THEN					BEGIN						SpeechError := GetIndVoice(i - 1, @MyVoiceSpec);						LongTemp := SizeOf(VoiceDescription);						SpeechError := GetVoiceDescription(@MyVoiceSpec, @MyVoiceDescription, LongTemp);						SpeechError := DisposeSpeechChannel(MyChan);						SpeechError := NewSpeechChannel(@MyVoiceSpec, MyChan);						SpeechError := GetSpeechPitch(MyChan, @MyPitch);						MyPitch := (MyPitch * PitchChange) DIV 16;						SpeechError := SetSpeechPitch(MyChan, MyPitch);						SpeechError := GetSpeechRate(MyChan, @MyRate);						MyRate := (MyRate * RateChange) DIV 16;						SpeechError := SetSpeechRate(MyChan, MyRate);						SpeechError := SpeakText(MyChan, SpeechBuffer, SpeechLength);					END;			END;	END;END.